
<div class="container">

<div class="jumbotron">
  <h1 class="display-4">Eat Da Buger</h1>
  <p class="lead">A burger app where you can enter your desired burger and devour it.</p>
  <hr class="my-4">
 <form class="create-form">
  <div class="form-group">
    <label for="newBurger">What kind of burger do you want?</label>
    <input type="text" class="form-control" id="newBurger">
    <button type="submit" class="btn btn-primary mb-2">Create Burger</button>
  </div>
  </form>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">You Ordered</h5>
        
            <div class="card-text">
                <p>{{#each burgers}}
                {{#unless devoured}}
                <span>{{this.id}} - {{this.burger_name}}</span>
                 <button type="button" class="btn btn-primary eatburger" id="eatbutton" data-id="{{this.id}}" 
                data-newDevoured="{{devour}}">Devour It</button>
                {{/unless}}
                {{/each}}</p>
            </div>
       
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Devoured</h5>
       <div class="card-text">
            <p> {{#each burgers}}
                {{#if devoured}}
                <span>{{this.id}} - {{this.burger_name}}</span>
                 {{!-- <button type="button" class="btn btn-primary eatburger" id="eatbutton" data-id="{{this.id}}" 
                data-newDevoured="{{devour}}">Devour It</button type="button"> --}}
                {{/if}}
                {{/each}}</p>
       </div>
      </div>
    </div>
  </div>
</div>

</div>